	pages = {5003--5015},
	file = {HalesNH_2017_Mol_Ecol_Contrasting_gene_expression_programs_correspond_with_predator-induced_phenotypic_plasticity_within_and_across_generations_in_Daphnia.pdf:/Users/darencard/Cloud_Drives/Box_Sync/Zotero_library/HalesNH_2017_Mol_Ecol_Contrasting_gene_expression_programs_correspond_with_predator-induced_phenotypic_plasticity_within_and_across_generations_in_Daphnia.pdf:application/pdf;Snapshot:/Users/darencard/Zotero/storage/46YDANTR/abstract.html:text/html}
