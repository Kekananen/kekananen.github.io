@article{cardNovelEcologicalClimatic2018,
  title = {Novel Ecological and Climatic Conditions Drive Rapid Adaptation in Invasive {{Florida Burmese}} Pythons},
  author = {Card, Daren C. and Perry, Blair W. and Adams, Richard H. and Schield, Drew R. and Young, Acacia S. and Andrew, Audra L. and Jezkova, Tereza and Pasquesi, Giulia I.M. and Hales, Nicole R. and Walsh, Matthew R. and Rochford, Michael R. and Mazzotti, Frank J. and Hart, Kristen M. and Hunter, Margaret E. and Castoe, Todd A.},
