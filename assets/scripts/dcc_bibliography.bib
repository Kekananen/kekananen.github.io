@article{cox_hormonally_2017,
	title = {Hormonally {Mediated} {Increases} in {Sex}-{Biased} {Gene} {Expression} {Accompany} the {Breakdown} of {Between}-{Sex} {Genetic} {Correlations} in a {Sexually} {Dimorphic} {Lizard}},
